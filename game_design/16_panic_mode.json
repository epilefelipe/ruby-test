  "___ESCAPE_IN_TIME___": "===========================================",

  "escape_success": {
    "endpoint": "POST /game/move { direction: 'norte' }",
    "condition": "time_remaining > 0",
    "response": {
      "success": true,
      "game_complete": true,
      "ending": {
        "type": "good_ending",
        "title": "¡ESCAPASTE!",
        "description": "Sales corriendo al jardín. Apenas cruzas el umbral, la mansión colapsa detrás de ti en una nube de polvo y escombros. El diario de María está a salvo en tus manos. Miras hacia atrás mientras el sol ilumina las ruinas de la Mansión Velasco. Sea lo que sea que pasó en 1987, ahora descansa bajo los escombros.",
        "dramatic_moment": "La puerta se cierra detrás de ti justo cuando el techo cae.",
        "time_remaining_when_escaped": 3
      }
    }
  },

  "___TIME_EXPIRED___": "===========================================",

  "time_expired": {
    "trigger": "Cualquier request cuando time_remaining <= 0",
    "response": {
      "success": false,
      "game_over": true,
      "ending": {
        "type": "bad_ending",
        "title": "Demasiado Lento",
        "description": "El techo colapsa sobre ti. Lo último que ves es el diario de María cayendo de tus manos mientras la oscuridad te envuelve. La Mansión Velasco se ha cobrado otra víctima.",
        "hint": "Consejo: Después de autenticarte, ve directo a la caja fuerte, toma la llave y corre al norte. No pierdas tiempo."
      }
    }
  }
}
