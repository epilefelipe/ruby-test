  "___USE_KEY_DURING_PANIC___": "===========================================",

  "use_key_panic": {
    "endpoint": "POST /game/use { item: 'llave_maestra', target: 'puerta_terminal' }",
    "response": {
      "success": true,
      "message": "¡La llave entra! ¡La puerta se abre! ¡CORRE!",
